@model crud.DATA.Models.Funcionario

@{
    ViewData["Title"] = "Create";
}

<h1>Novo funcionário</h1>

<h4>Preencha o formulário</h4>
<hr />
<div>
    <a class="btn btn-primary" asp-action="Index" asp-controller="Empresa">Voltar</a>
</div>

<br />
<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div hidden class="form-group">
                <label asp-for="IdEmpresa" class="control-label"></label>
                <input hidden value="@ViewBag.IdEmpresa" asp-for="IdEmpresa" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cargo" class="control-label"></label>
                <select asp-for="Cargo" class="form-control">
                    <option value="Programador"> Programador </option>
                    <option value="Aux. Administrativo"> Aux. Administrativo </option>
                    <option value="CEOO"> CEOO </option>
                    <option value="Gerente de projetos"> Gerente de projetos </option>
                    <option value="Advogado"> Advogado </option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Salario" class="control-label"></label>
                <input asp-for="Salario" class="form-control" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Incluir" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $("#Salario").mask("999.999.990,00", { reverse: true })
    </script>
}
