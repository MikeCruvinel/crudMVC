@model ViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes da empresa</h1>

<div>
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
    <a asp-action="Edit" class="btn btn-success" asp-route-id="@Model.oEmpresa.Id">Alterar</a>
    <a asp-action="Create" asp-controller="Funcionario" class="btn btn-success" asp-route-idEmpresa="@Model.oEmpresa.Id">Adicionar funcionário</a>
</div>
<br />
<div>
    <h4>Empresa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oEmpresa.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oEmpresa.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oEmpresa.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oEmpresa.Telefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oEmpresa.Endereco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oEmpresa.Endereco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oEmpresa.Bairro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oEmpresa.Bairro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oEmpresa.Cidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oEmpresa.Cidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oEmpresa.Numero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oEmpresa.Numero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oEmpresa.Complemento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oEmpresa.Complemento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oEmpresa.Cep)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oEmpresa.Cep)
        </dd>
        <table id="myTable" class="table">
            <h4>Funcionários</h4>
            <tbody>
                @foreach (var item in Model.oListFuncionario)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td class="row col-md">
                            <a asp-action="Edit" asp-controller="Funcionario" class="btn btn-success m-1" asp-route-id="@item.Id">Alterar</a>
                            <a asp-action="Details" asp-controller="Funcionario" class="btn btn-primary m-1" asp-route-id="@item.Id">Detalhes</a>

                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-danger m-1" data-toggle="modal" data-target="#DeleteModal-@item.Id">
                                Excluir
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="DeleteModal-@item.Id" tabindex="-1" role="dialog" aria-labelledby="DeleteModal" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="DeleteModal">Excluir funcionário</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Deseja realmente excluir o funcionário @item.Nome
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Voltar</button>
                                            <a asp-action="Delete" asp-controller="Funcionario" class="btn btn-danger" asp-route-id="@item.Id">Excluir</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </dl>
</div>

